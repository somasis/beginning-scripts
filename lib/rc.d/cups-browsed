#!/bin/bash

cups-browsed_exists() {
    prog_exists cups-browsed
}

cups-browsed_depends() {
    echo cupsd avahi-daemon
}

cups-browsed_start() {
    cups-browsed --autoshutdown=avahi ${CUPS_BROWSED_ARGS} >/dev/null 2>&1 &
    echo $! > "@@runstatedir@@"/cups-browsed.pid
}

cups-browsed_stop() {
    pidfilekill "@@runstatedir@@"/cups-browsed.pid
}

cups-browsed_status() {
    pidfileexists "@@runstatedir@@"/cups-browsed.pid
}
