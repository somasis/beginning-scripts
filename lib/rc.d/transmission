#!/bin/bash

transmission_exists() {
    prog_exists transmission-daemon
}

transmission_start() {
    if [[ "${TRANSMISSION_USER}" ]];then
        touch /run/transmission.pid && chown "${TRANSMISSION_USER}" /run/transmission.pid
        su -s $(type -fPp sh) -c "transmission-daemon -x /run/transmission.pid ${TRANSMISSION_ARGS}" "${TRANSMISSION_USER}" &
    else
        transmission-daemon -x /run/transmission.pid ${TRANSMISSION_ARGS} &
    fi
}

transmission_stop() {
    pidfilekill /run/transmission.pid
}

transmission_status() {
    pidfileexists /run/transmission.pid
}
